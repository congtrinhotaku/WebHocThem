<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>KAZUTO - Sign Up</title>
    <link rel="icon" href="img/icon.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;800&display=swap');

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background: #f6f5f7;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            font-family: 'Montserrat', sans-serif;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 14px 28px rgba(0, 0, 0, 0.15), 0 10px 10px rgba(0, 0, 0, 0.12);
            position: relative;
            overflow: hidden;
            width: 800px;
            max-width: 100%;
            min-height: 650px;
        }

        .form-container {
            position: absolute;
            top: 0;
            height: 100%;
            width: 50%;
        }

        .sign-up-container {
            right: 0;
            z-index: 1;
        }

        .overlay-container {
            position: absolute;
            top: 0;
            right: 50%;
            width: 50%;
            height: 100%;
            overflow: hidden;
            z-index: 100;
        }

        .overlay {
            background: #3498db;
            background: linear-gradient(to right, rgba(52, 152, 219, 0.7), rgba(41, 128, 185, 0.7));
            background-repeat: no-repeat;
            background-size: cover;
            background-position: 0 0;
            color: #FFFFFF;
            position: relative;
            height: 100%;
            width: 100%;
        }

        .overlay-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .overlay-panel {
            position: absolute;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 0 40px;
            text-align: center;
            top: 0;
            height: 100%;
            width: 100%;
            background-image: url(img/Signup_image.jpg);
        }

        .overlay-panel img {

            width: 395px;
            height: auto;
        }

        h1 {
            font-weight: bold;
            margin: 0;
            margin-bottom: 15px;
        }

        p {
            font-size: 14px;
            line-height: 20px;
            letter-spacing: 0.5px;
            margin: 20px 0 30px;
        }

        .social-container {
            margin: 15px 0;
            display: flex;
            width: 100%;
            justify-content: center;
        }

        .social-container .social-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: white;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .social-container .social-btn:hover {
            background-color: #dbdada;
        }

        .social-container .social-btn img {
            height: 24px;
            margin-right: 10px;
        }

        .social-container .social-btn span {
            font-size: 14px;
            color: #333;
        }

        .social-container a {
            text-decoration: none;

        }

        .divider {
            width: 100%;
            text-align: center;
            margin: 10px 0;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background-color: #eee;
            z-index: 1;
        }

        .divider span {
            background-color: white;
            padding: 0 15px;
            position: relative;
            z-index: 2;
            color: #777;
            font-size: 12px;
        }

        button {
            border-radius: 20px;
            border: 1px solid #3498db;
            background-color: #3498db;
            color: #FFFFFF;
            font-size: 12px;
            font-weight: bold;
            padding: 12px 45px;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: transform 80ms ease-in, background-color 0.3s;
            cursor: pointer;
        }

        button:active {
            transform: scale(0.95);
        }

        button:focus {
            outline: none;
        }

        button.ghost {
            background-color: transparent;
            border-color: #FFFFFF;
        }

        button:hover {
            background-color: #00FFFB;
        }

        button.ghost:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }

        form {
            background-color: #FFFFFF;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding: 20px 50px;
            height: 100%;
            text-align: center;
            overflow-y: hidden;
        }

        #signup-form {
            padding-top: 10px;
            max-height: 100%;
        }

        input {
            background-color: #eee;
            border: none;
            border-radius: 4px;
            padding: 12px 15px;
            margin: 4px 0 0 0;
            width: 100%;
        }

        input:focus {
            outline: 2px solid #00FFFB;
        }

        .form-group {
            width: 100%;
            text-align: left;
            margin-bottom: 6px;
            position: relative;
        }

        .form-group label {
            display: block;
            margin-bottom: 2px;
            font-size: 13px;
            color: #333;
        }

        .error-message {
            color: #e74c3c;
            font-size: 11px;
            margin-top: 2px;
            margin-bottom: 2px;
            text-align: left;
            display: none;
        }

        input.error {
            border: 1px solid #e74c3c;
        }

        .signup-link {
            margin-top: 10px;
            color: #777;
            font-size: 14px;
        }

        .signup-link a {
            color: #3498db;
            text-decoration: none;
            font-weight: bold;
        }

        .signup-link a:hover {
            text-decoration: underline;
        }

        #signup-form button[type="submit"] {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .text-danger-custom {
            color: red;
            background: none;
            border: none;
            padding: 0;
            margin: 0;
        }

        .mobile-logo {
            display: none;
            /* Hidden by default */
            text-align: center;
            margin-bottom: 20px;
        }

        .mobile-logo img {
            width: 250px;
            /* Adjust the size as needed */
            height: auto;
        }

        /* Media Queries for Responsiveness */
        @media (max-width: 768px) {
            .container {
                width: 90%;
                /* Reduce container width for smaller screens */
                min-height: auto;
                /* Allow container to adjust height */
                flex-direction: column;
                /* Stack elements vertically */
            }

            .form-container,
            .overlay-container {
                width: 100%;
                /* Full width for form and overlay */
                height: auto;
                /* Adjust height automatically */
                position: static;
                /* Remove absolute positioning */
            }

            .overlay-container {
                display: none;
                /* Hide overlay on small screens */
            }

            .form-container.sign-up-container {
                padding: 20px;
                /* Add padding for better spacing */
            }

            .overlay-panel {
                padding: 20px;
                /* Adjust padding for smaller screens */
            }

            .overlay-panel img {
                width: 200px;
                /* Reduce image size for smaller screens */
            }

            h1 {
                font-size: 24px;
                /* Reduce heading size */
            }

            p {
                font-size: 12px;
                /* Reduce paragraph text size */
            }

            button {
                padding: 10px 30px;
                /* Adjust button padding */
                font-size: 10px;
                /* Reduce button text size */
            }

            input {
                padding: 10px;
                /* Adjust input padding */
            }

            .form-group label {
                font-size: 12px;
                /* Reduce label size */
            }

            .divider span {
                font-size: 10px;
                /* Reduce divider text size */
            }

            .error-message {
                font-size: 10px;
                /* Reduce error message size */
            }

            .signup-link {
                font-size: 12px;
                /* Reduce signup link size */
            }

            .mobile-logo {
                display: block;
            }
        }

        @media (max-width: 480px) {
            .container {
                width: 100%;
                /* Full width for very small screens */
                border-radius: 0;
                /* Remove border radius */
            }

            .form-container.sign-up-container {
                padding: 10px;
                /* Reduce padding further */
            }

            h1 {
                font-size: 20px;
                /* Further reduce heading size */
            }

            p {
                font-size: 10px;
                /* Further reduce paragraph text size */
            }

            button {
                padding: 8px 20px;
                /* Further adjust button padding */
                font-size: 9px;
                /* Further reduce button text size */
            }

            input {
                padding: 8px;
                /* Further adjust input padding */
            }

            .divider span {
                font-size: 9px;
                /* Further reduce divider text size */
            }

            .form-group label {
                font-size: 11px;
                /* Further reduce label size */
            }

            .error-message {
                font-size: 9px;
                /* Further reduce error message size */
            }

            .signup-link {
                font-size: 11px;
                /* Further reduce signup link size */
            }

            .mobile-logo {
                display: block;
                /* Show logo on small screens */
            }
        }



        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }

        .toast {
            display: none;
            background-color: #ff6600;
            color: white;
            padding: 15px 30px;
            border-radius: 12px;
            font-size: 16px;
            text-align: center;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            opacity: 0;
            transform: translateX(100%);
            animation: slideInFromRight 0.8s ease-out forwards;
        }

        @keyframes slideInFromRight {
            0% {
                opacity: 0;
                transform: translateX(100%);
            }

            100% {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideOutToRight {
            0% {
                opacity: 1;
                transform: translateX(0);
            }

            100% {
                opacity: 0;
                transform: translateX(100%);
            }
        }
    </style>
</head>

<body>
    <div class="toast-container"></div>
    <div class="container" id="container">
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel">
                    <h1>Chào bạn!</h1>
                    <p>Nhập thông tin cá nhân của bạn và bắt đầu hành trình cùng chúng tôi</p>
                    <img src="img/footer-logo.png" alt="KAZUTO">
                </div>
            </div>
        </div>

        <div class="form-container sign-up-container">
            <div class="mobile-logo">
                <img src="img/footer-logo.png" alt="KAZUTO">
            </div>
            <form id="signup-form">

                <h1 style="margin-top: 5px;">Đăng ký</h1>

                <div class="form-group">
                    <label for="fullname">Họ và tên</label>
                    <input type="text" id="fullname" placeholder="Nhập họ và tên đầy đủ của bạn" name="name" />
                    <p class="error-message" id="fullname-error"></p>
                </div>
                <div class="form-group">
                    <label for="signup-email">Email</label>
                    <input type="email" id="signup-email" placeholder="Nhập email của bạn" name="email" />
                    <p class="error-message" id="signup-email-error"></p>
                </div>
                <div class="form-group">
                    <label for="phone">Điện thoại</label>
                    <input type="tel" maxlength="10" id="phone" placeholder="Nhập số điện thoại của bạn" name="phone" />
                    <p class="error-message" id="phone-error"></p>
                </div>
                <div class="form-group">
                    <label for="signup-password">Mật khẩu</label>
                    <input type="password" id="signup-password" placeholder="Nhập mật khẩu của bạn" name="password" />
                    <p class="error-message" id="signup-password-error"></p>
                </div>
                <div class="form-group">
                    <label for="confirm-password">Xác nhận mật khẩu</label>
                    <input type="password" id="confirm-password" placeholder="Xác nhận mật khẩu của bạn" name="cpassword" />
                    <p class="error-message" id="confirm-password-error"></p>
                </div>

                <button type="submit">Đăng ký</button>

                <p class="signup-link">Đã có tài khoản? <a href="/login">Đăng nhập</a></p>
            </form>
        </div>
    </div>


    <script>
        // Các tiện ích xác thực biểu mẫu
        function showError(input, message) {
            const formGroup = input.parentElement;
            const errorElement = formGroup.querySelector('.error-message');

            input.classList.add('error');
            errorElement.textContent = message;
            errorElement.style.display = 'block';

            return false;
        }

        function clearError(input) {
            const formGroup = input.parentElement;
            const errorElement = formGroup.querySelector('.error-message');

            input.classList.remove('error');
            errorElement.textContent = '';
            errorElement.style.display = 'none';
        }

        function validateEmail(email) {
            const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
            return re.test(String(email).toLowerCase());
        }

        function validatePhone(phone) {
            const phoneRegex = /^\d{10}$/;
            return phoneRegex.test(phone);
        }

        function validatePassword(password) {
            // Ít nhất 8 ký tự, 1 chữ hoa, 1 chữ thường, 1 số, 1 ký tự đặc biệt
            const re = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$/;
            return re.test(password);
        }


        // Xác thực biểu mẫu đăng ký
        const signupForm = document.getElementById('signup-form');

        // Thêm trình nghe sự kiện input để xóa lỗi khi người dùng nhập
        document.getElementById('fullname').addEventListener('input', function () {
            clearError(this);
        });

        document.getElementById('signup-email').addEventListener('input', function () {
            clearError(this);
        });

        document.getElementById('phone').addEventListener('input', function () {
            clearError(this);
        });

        document.getElementById('signup-password').addEventListener('input', function () {
            clearError(this);
            // Cũng xóa lỗi xác nhận mật khẩu nếu tồn tại
            clearError(document.getElementById('confirm-password'));
        });

        document.getElementById('confirm-password').addEventListener('input', function () {
            clearError(this);
        });

        signupForm.addEventListener('submit', async (e) => {
            e.preventDefault();

            let isValid = true;

            // Xác thực họ và tên đầy đủ
            const fullname = document.getElementById('fullname');
            const nameRegex = /^[A-Za-zÀ-ỹ\s]+$/u;
            if (fullname.value.trim() === '') {
                isValid = showError(fullname, 'Họ và tên là bắt buộc');
            } else if (fullname.value.trim().length < 3) {
                isValid = showError(fullname, 'Tên phải có ít nhất 3 ký tự');
            } else if (!nameRegex.test(fullname.value.trim())) {
                isValid = showError(fullname, 'Tên không được chứa số hoặc ký tự đặc biệt');
            }

            // Xác thực email
            const email = document.getElementById('signup-email');
            if (email.value.trim() === '') {
                isValid = showError(email, 'Email là bắt buộc');
            } else if (!validateEmail(email.value.trim())) {
                isValid = showError(email, 'Vui lòng nhập địa chỉ email hợp lệ');
            }

            // Xác thực điện thoại
            const phone = document.getElementById('phone');
            if (phone.value.trim() === '') {
                isValid = showError(phone, 'Số điện thoại là bắt buộc');
            } else if (!validatePhone(phone.value.trim())) {
                isValid = showError(phone, 'Vui lòng nhập số điện thoại hợp lệ gồm 10 chữ số, không có khoảng trắng và ký tự đặc biệt');
            }

            // Xác thực mật khẩu
            const password = document.getElementById('signup-password');
            if (password.value === '') {
                isValid = showError(password, 'Mật khẩu là bắt buộc');
            } else if (!validatePassword(password.value)) {
                isValid = showError(password, 'Mật khẩu phải có ít nhất 8 ký tự với 1 chữ hoa, 1 chữ thường, 1 số và 1 ký tự đặt biệt');
            }

            // Xác thực xác nhận mật khẩu
            const confirmPassword = document.getElementById('confirm-password');
            if (confirmPassword.value === '') {
                isValid = showError(confirmPassword, 'Vui lòng xác nhận mật khẩu của bạn');
            } else if (confirmPassword.value !== password.value) {
                isValid = showError(confirmPassword, 'Mật khẩu không khớp');
            }
            if (!isValid) {
                return
            } else {
                let emailval = document.getElementById("signup-email").value
                let passwordval = document.getElementById("signup-password").value
                try {
                    let formData = {
                        fullname: fullname.value,
                        emailval: emailval,
                        phone: phone.value,
                        passwordval: passwordval,
                        referralCode: document.getElementById('referralCode').value.trim() || null
                    }
                    let response = await fetch('/signup', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(formData)
                    });
                    const result = await response.json();
                    const toastContainer = document.querySelector(".toast-container");
                    const toast = document.createElement("div");
                    toast.className = "toast";

                    if (result.success === false) {
                        toast.textContent = "Email đã tồn tại!";
                        toast.style.backgroundColor = "#dc3545"; // Màu đỏ cho lỗi
                    } else {
                        toast.textContent = "Mã OTP đã được gửi thành công!";
                        toast.style.backgroundColor = "#28a745"; // Màu xanh lá cây cho thành công
                        setTimeout(() => {
                            window.location.href = "/otpsend";
                        }, 1500);
                    }

                    toastContainer.appendChild(toast);
                    setTimeout(() => {
                        toast.style.display = "block";
                    }, 100);

                    setTimeout(() => {
                        toast.style.animation = "slideOutToRight 0.8s ease-out forwards";
                    }, 3000);

                    setTimeout(() => {
                        toast.style.display = "none";
                        toast.remove();
                    }, 3800);

                } catch (error) {
                    console.error("Lỗi đăng ký:", error);
                }
            }
        });
    </script>
</body>

</html>