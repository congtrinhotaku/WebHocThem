<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/users/header.css">
  <link rel="stylesheet" href="/stylesheets/users/index.css">

  <script src="https://cdn.tailwindcss.com"></script>
  <!-- jQuery, Popper.js, Bootstrap 4 JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- Font Awesome 6 Free CDN -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">



</head>

<body>
  <!-- header.html -->
  <div class="header">
    <div class="top-header">
      <div class="container-top">
        <div class="top-row">
          <div class="left-top-header">
            <form action="//www.google.com/cse" class="search-form">
              <input type="text" name="q" class="text-search" placeholder="Tìm kiếm khóa học, giáo viên">
              <button type="submit" class="btn-search">🔍</button>
            </form>
          </div>
          <div class="right-top-header">
            <% if (user) { %>
              <div class="dropdown">
                <button class="btn dropdown-toggle d-flex align-items-center" id="userMenu" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
                  <img
                    src="<%= user.Avatar_Nguoi_Dung || 'https://www.pngkey.com/png/full/115-1150152_default-profile-picture-avatar-png-green.png' %>"
                    class="rounded-circle" width="32" height="32" alt="Avatar">
                  <span class="ml-2">
                    <%= user.Ten_Nguoi_Dung %>
                  </span>
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
                  <% let profileLink=user.Vai_Tro_Nguoi_Dung==='GiangVien' ? '/giangvien/profile' : '/profile' ; %>
                    <a class="dropdown-item" href="/profile">👤 Hồ sơ</a>
                    <a class="dropdown-item text-danger" href="/logout">🔒 Đăng xuất</a>
                </div>
              </div>

              <% } else { %>
                <a class="btn-acc btn-login" href="/login">Đăng Nhập</a>
                <a class="btn-acc btn-register" href="/register">Đăng Ký</a>
                <% } %>
          </div>

        </div>
      </div>
    </div>
    <div class="bot-header">
      <div class="container-bot">
        <div class="row no-mg">
          <div class="menu">
            <ul>
              <li><a target="_blank" href="">Giới thiệu</a></li>
              <li><a target="_blank" href="">Giáo viên</a></li>
              <li><a target="_blank" href="">Tự luyện</a></li>
              <li><a target="_blank" href="">Hướng nghiệp</a></li>
              <li><a target="_blank" href="">Thư viện</a></li>
              <li><a target="_blank" href="">Hướng dẫn</a></li>
              <li><a target="_blank" href="">Đăng ký học</a></li>
              <li><a target="_blank" href="">Hỗ trợ</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<script>


    window.addEventListener("scroll", function () {
            var header = document.querySelector(".bot-header");
            if (window.scrollY >= 150) {
                header.classList.add("fixed-header");
            } else {
                header.classList.remove("fixed-header");
            }
        });
</script>